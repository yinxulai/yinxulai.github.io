{
    "extends": [
        "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "parser": "@typescript-eslint/parser"
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "vue/html-self-closing": "off",
        "vue/multi-word-component-names": "off",
        "vue/max-attributes-per-line": [
            "error",
            {
                "singleline": {
                    "max": 3
                },
                "multiline": {
                    "max": 1
                }
            }
        ],
        "vue/no-unused-vars": [
            "error",
            {
                "ignorePattern": "^_"
            }
        ]
    }
}
